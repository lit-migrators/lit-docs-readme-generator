{
  "name": "lit-docs-generator",
  "version": "1.0.6",
  "description": "Generate Stencil.js-compatible README documentation for Lit components",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": "./dist/cli.js",
  "files": [
    "dist",
    "README.md",
    "LICENCE.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "tsx src/cli.ts",
    "example": "tsx src/cli.ts \"examples/components/**/*.lit.ts\"",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "lit",
    "documentation",
    "stencil",
    "web-components",
    "markdown",
    "readme",
    "generator"
  ],
  "author": "lit-migrators",
  "license": "MIT",
  "dependencies": {
    "glob": "^10.3.10",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@stencil/core": "^4.38.2",
    "@types/node": "^22.10.5",
    "lit": "^3.2.1",
    "tsx": "^4.19.2"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
